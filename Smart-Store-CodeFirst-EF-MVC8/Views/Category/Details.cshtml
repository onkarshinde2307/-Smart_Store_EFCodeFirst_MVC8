@model Smart_Store_CodeFirst_EF_MVC8.Models.Category

@{
    ViewData["Title"] = "Category Details";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

<style>
    body {
        background-color: #f1f3f6;
        font-family: 'Segoe UI', sans-serif;
    }

    .header-bar {
        background: linear-gradient(135deg, #4b0082, #00bcd4);
        color: white;
        padding: 20px 30px;
        border-radius: 10px;
        margin-bottom: 30px;
        box-shadow: 0 4px 10px rgba(0,0,0,0.05);
    }

        .header-bar h2 {
            margin: 0;
            font-weight: 600;
        }

    .table {
        background-color: white;
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0 2px 8px rgba(0,0,0,0.05);
    }

        .table th {
            background-color: #f4f4f4;
            color: #333;
            font-weight: 600;
            border-bottom: 2px solid #dee2e6;
        }

        .table td {
            vertical-align: middle;
        }

    .table-hover tbody tr:hover {
        background-color: #f9f9f9;
    }

    .no-products {
        padding: 15px;
        background-color: #fff3cd;
        border: 1px solid #ffeeba;
        border-radius: 8px;
        text-align: center;
        color: #856404;
        font-style: italic;
    }
</style>

<div class="container mt-4">
    <div class="header-bar mb-4">
        <h2><i class="fa-solid fa-layer-group me-2"></i>@Model.CategoryName</h2>
    </div>

    <h4 class="mb-3"><i class="fa-solid fa-boxes-stacked me-1"></i> Products in this Category:</h4>

    @if (Model.Products == null || !Model.Products.Any())
    {
        <div class="no-products">
            <i class="fa-solid fa-circle-info me-1"></i> No products found in this category.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-bordered table-hover align-middle">
                <thead>
                    <tr>
                        <th>Product</th>
                        <th>Price</th>
                        <th>Description</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var p in Model.Products)
                    {
                        <tr>
                            <td>@p.ProductName</td>
                            <td>₹@p.Price</td>
                            <td>@p.Description</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
