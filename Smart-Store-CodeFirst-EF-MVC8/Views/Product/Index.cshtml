@model IEnumerable<Smart_Store_CodeFirst_EF_MVC8.Models.Product>

@{
    ViewData["Title"] = "Products";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

<style>
    .page-header {
        font-weight: 600;
        color: #4b0082;
        margin-bottom: 20px;
    }

    .btn-sm {
        font-size: 0.85rem;
        border-radius: 6px;
    }

    .btn-action i {
        margin-right: 6px;
    }

    .table thead th {
        background-color: #f3f3f3;
        color: #333;
        font-weight: 600;
        border-bottom: 2px solid #dee2e6;
    }

    .table-hover tbody tr:hover {
        background-color: #f9f9f9;
    }

    .product-name-link {
        text-decoration: none;
        color: #333;
        font-weight: 500;
    }

        .product-name-link:hover {
            text-decoration: underline;
            color: #4b0082;
        }
</style>

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center">
        <h3 class="page-header">
            <i class="fa-solid fa-box-open me-2"></i> Products List
        </h3>
        <a class="btn btn-success btn-sm" asp-action="Create">
            <i class="fa-solid fa-plus"></i> Add Product
        </a>
    </div>

    <hr />

    @if (!Model.Any())
    {
        <div class="alert alert-warning text-center">
            <i class="fa-solid fa-circle-info me-1"></i> No products available. Add some to get started.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover align-middle">
                <thead>
                    <tr>
                        <th>Product</th>
                        <th>Category</th>
                        <th>Price</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                <a asp-action="Details" asp-route-id="@item.ProductId" class="product-name-link">
                                    <i class="fa-solid fa-box me-1"></i> @item.ProductName
                                </a>
                            </td>
                            <td>@item.Category?.CategoryName</td>
                            <td>₹@item.Price</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.ProductId" class="btn btn-warning btn-sm btn-action me-1">
                                    <i class="fa-solid fa-pen"></i> Edit
                                </a>
                                <a asp-action="Details" asp-route-id="@item.ProductId" class="btn btn-info btn-sm btn-action me-1">
                                    <i class="fa-solid fa-eye"></i> View
                                </a>
                                <a asp-action="Delete" asp-route-id="@item.ProductId" class="btn btn-danger btn-sm btn-action">
                                    <i class="fa-solid fa-trash"></i> Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>
